<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-normal" data-toggle="modal" data-target="#myModal_<%= reservation.id %>">
  お客様へのレビュー
</button>

<!-- Modal -->
<div id="myModal_<%= reservation.id %>" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-left">お客様へのレビュー</h4>
      </div>
      <div class="modal-body">
        <%= form_for current_user.host_reviews.new do |f| %>
            <div class="form-group text-center">
              <div id="stars"></div><br/>
              <span>５段階で選択できます</span>
            </div>
            <div class="form-group">
              <%= f.text_area :comment, rows: 3, class: "form-control" %>
            </div>

            <%= f.hidden_field :motorbike_id, value: reservation.motorbike.id %>
            <%= f.hidden_field :reservation_id, value: reservation.id %>
            <%= f.hidden_field :guest_id, value: reservation.user.id %>

            <div class="text-center">
              <%= f.submit "お客様へのレビューを保存", class: "btn btn-normal" %>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>

<script>
  $('#stars').raty({
    path: '/assets',
    scoreName: 'host_review[star]',
    score: 1
  });
</script>
