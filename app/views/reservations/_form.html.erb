<h4> 料金　￥<%= @motorbike.price %></h4>
<span>（１日あたり）</span><br/><br/>

<%= form_for([@motorbike, @motorbike.reservations.new]) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <label>貸出開始日</label>
      <%= f.text_field :start_date, readonly: true, placeholder: "開始日", class: "form-control datepicker" %>
    </div>
    <div class="col-md-6">
      <label>返却日</label>
      <%= f.text_field :end_date, readonly: true, placeholder: "返却日", class: "form-control datepicker", disabled: true %>
    </div>
  </div>

  <h4 class="message-alert text-center"><span id="message"></span></h4>
  <div id="preview" style="display: none">
    <table class="reservation-table">
      <tbody>
        <tr>
          <td>バイク名</td>
          <td class="text-right"><%= @motorbike.listing_name %></td>
        </tr>
        <tr>
          <td>価格</td>
          <td class="text-right">￥<%= @motorbike.price %></td>
        </tr>
        <tr>
          <td>日数</td>
          <td class="text-right">x <span id="reservation_nights"></span></td>
        </tr>
        <tr>
          <td class="total">支払い合計</td>
          <td class="text-right">￥<span id="reservation_total"></span></td>
        </tr>
      </tbody>
    </table>
  </div>

  <br/>
      <%= f.submit "予約リクエストする", id: "btn_book", class: "btn btn-normal btn-block", disabled: true %>
</div>
<% end %>
<script>
$(function() {

  var start_date = $('#reservation_start_date').datepicker('getDate');
  var end_date = $('#reservation_end_date').datepicker('getDate');
  var nights = (end_date - start_date)/1000/60/60/24 + 1

</script>
