<br/><div class="row">
  <div class="col-md-8">
    <h4>STEP 1： バイクを貸してみましょう</h4><hr/>
      <%= form_for @motorbike do |f| %>

        <div class="form-group">
          <label>バイクの名前</label>
          <%= f.text_field :listing_name, placeholder: "バイク名", class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <label>バイクの紹介</label>
          <%= f.text_area :summary, rows: 5, placeholder: "バイクの紹介文", class: "form-control", required: true %>
        </div>

      <div class="text-center">
        <%= f.submit "保存", class: "btn btn-form" %>
      </div>

    <% end %>

    </div>
  </div>
