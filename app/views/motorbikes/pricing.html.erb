<div class="row">
  <div class="col-md-3">
    <%= render 'motorbike_menu' %>
  </div>
  <div class="col-md-8">
        <h4 class="text-center">貸出価格</h4><hr/>
        <%= form_for @motorbike do |f| %>

            <div class="row">
              <div class="form-group">
                <div class="text-center">
                <label>価格(１日あたり)</label>
                <%= f.text_field :price, placeholder: "例: ¥10,000", class: "form-control", required: true %>
              </div>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>
