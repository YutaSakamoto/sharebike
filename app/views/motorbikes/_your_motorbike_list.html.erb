<% @motorbikes.each do |motorbike| %>
    <div class="col-md-6">

        <div class="panel-heading preview">
          <%= image_tag motorbike.cover_photo(:medium) %>
        </div>

        <div class="panel-body">
          <%= link_to motorbike.listing_name, motorbike %><br/>
          ￥<%= motorbike.price %> / 1日
          <div id="star_<%= motorbike.id %>"></div> <%= pluralize(motorbike.average_rating, "Review from Riders") %><hr/>
        </div>
      </div>


    <script>
      $('#star_<%= motorbike.id %>').raty({
        path: '/assets',
        readOnly: true,
        score: <%= motorbike.average_rating %>
      });
    </script>
<% end %>
