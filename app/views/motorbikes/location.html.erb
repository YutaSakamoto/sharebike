<div class="row">
  <div class="col-md-3">
    <%= render 'motorbike_menu' %>
  </div>
  <div class="col-md-8">
          <h4 class="text-center">貸出場所</h4><hr/>
          <%= form_for @motorbike do |f| %>

            <div class="row">
              <div class="form-group">
                <div class="text-center">
                <label>貸出場所の住所</label>
                <%= f.text_field :address, placeholder: "住所を記入してください", class: "form-control", required: true %>
              </div>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "保存", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

<script>
  $(function() {
    $("#autoaddress").geocomplete();
  })
</script>
