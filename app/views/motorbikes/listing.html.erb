<div class="row">
  <div class="col-md-3">
    <%= render 'motorbike_menu' %>
  </div>
  <div class="col-md-8">
        <h4 class="text-center">バイク基本情報のアップデート</h4><hr/>
          <%= form_for @motorbike do |f| %>

          <div class="row">
            <div class="form-group">
              <div class="text-center">
              <label>バイクの名前</label>
              <%= f.text_field :listing_name, placeholder: "バイク名", class: "form-control", required: true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <div class="text-center">
              <label>バイクの紹介</label>
              <%= f.text_area :summary, rows: 5, placeholder: "紹介文", class: "form-control", required: true %>
              </div>
            </div>
          </div>

            <div class="form-group">
              <div class="text-center">
              <label>予約受付の方法</label><br/>
              <label>Request : リクエストを受付後、承認or拒否の選択ができます。</label><br/>
              <label>Instant : 即予約が発生します。</label><br/><br/>
              <%= f.select :instant, Motorbike.instants.map {|key,value| [key.humanize, key]}, selected: 'Request', prompt: "Select...", class: "form-control" %>
              </div>
            </div>

          <div class="text-center">
            <%= f.submit "保存", class: "btn btn-form" %>
          </div>

        <% end %>
        </div>
      </div>
